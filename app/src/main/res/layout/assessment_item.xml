<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/delapanbelas"
    app:cardElevation="2dp"
    android:layout_marginStart="@dimen/delapanbelas"
    android:layout_marginEnd="@dimen/delapanbelas"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/delapanbelas"
        android:paddingEnd="@dimen/delapanbelas"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/endPurple"
            android:textSize="12sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="1/6"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/mainFontColor"
            android:layout_below="@+id/tv_no"
            tools:text="Apakah pernah keluar rumah/tempat umum (pasar, fasyenkes, kerumunan orang, dan lain-lain)?"/>
        <RadioGroup
            android:id="@+id/rg_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya"
                android:fontFamily="@font/poppins"
                android:textColor="@color/mainFontColor"
                android:layout_marginEnd="72dp"/>
            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/poppins"
                android:textColor="@color/mainFontColor"
                android:text="Tidak" />
        </RadioGroup>
    </RelativeLayout>
</androidx.cardview.widget.CardView>