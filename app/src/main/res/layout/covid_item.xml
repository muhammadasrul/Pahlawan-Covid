<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView3"
    app:cardCornerRadius="@dimen/duaempat"
    app:cardElevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="@dimen/duaempat"
    android:layout_marginEnd="@dimen/duaempat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_provinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/mainFontColor"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/delapanbelas"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jawa Tengah" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="100dp"
            android:layout_height="124dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/delapanbelas"
            android:layout_marginStart="@dimen/delapanbelas"
            android:background="@drawable/purple_rounded_stroke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_provinsi">

            <ImageView
                android:id="@+id/img_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_plus_c" />

            <TextView
                android:id="@+id/txt_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_positif"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="24sp"
                tools:text="201204" />

            <TextView
                android:id="@+id/tv_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:text="Positif"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="100dp"
            android:layout_height="124dp"
            android:background="@drawable/purple_rounded_stroke"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout2">

            <ImageView
                android:id="@+id/img_sembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_done_c" />

            <TextView
                android:id="@+id/txt_sembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_sembuh"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="24sp"
                tools:text="201204" />

            <TextView
                android:id="@+id/tv_sembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:text="Sembuh"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="100dp"
            android:layout_height="124dp"
            android:layout_marginEnd="@dimen/delapanbelas"
            android:background="@drawable/purple_rounded_stroke"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout3">

            <ImageView
                android:id="@+id/img_meninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_close_c" />

            <TextView
                android:id="@+id/txt_meninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_meninggal"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="24sp"
                tools:text="201204" />

            <TextView
                android:id="@+id/tv_meninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:text="Meninggal"
                android:textAlignment="center"
                android:textColor="@color/mainFontColor"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>