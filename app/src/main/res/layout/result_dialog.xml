<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Asesmen"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/mainFontColor"
        android:layout_marginTop="@dimen/duaempat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textColor="@color/mainFontColor"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/delapanbelas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hasil"
        tools:text="Resiko Kecil"/>
    <TextView
        android:id="@+id/tv_desc_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/delapanbelas"
        android:textColor="@color/mainFontColor"
        android:layout_marginEnd="@dimen/duaempat"
        android:layout_marginStart="@dimen/duaempat"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Lorem ipsum"/>
    <Button
        android:id="@+id/btn_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:textColor="@color/white"
        android:background="@drawable/purple_gradient"
        android:layout_marginBottom="@dimen/duaempat"
        android:layout_marginEnd="@dimen/duaempat"
        android:layout_marginStart="@dimen/duaempat"
        android:layout_marginTop="@dimen/duaempat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_status"/>
</androidx.constraintlayout.widget.ConstraintLayout>