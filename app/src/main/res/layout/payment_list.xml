<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/delapanbelas"
    android:layout_marginEnd="@dimen/delapanbelas"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@+id/tv_metode"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardCornerRadius="@dimen/delapanbelas"
    app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/delapanbelas"
            android:paddingEnd="@dimen/delapanbelas"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_payment"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_balance"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/duaempat"
                android:layout_marginEnd="@dimen/delapanbelas"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/rb_payment"
                android:layout_toEndOf="@+id/img_payment"
                tools:text="BRI"
                android:textColor="@color/mainFontColor"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rb_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>